.container
  %p#notice= notice
  %input{type: 'hidden', id: 'project_id', value: @project.id}
  %p
    = image_tag @project.image
    %b Name:
    = @project.name
    = surround '(',')' do
      =@project.started 
      to
      =@project.finished ? @project.finished : "Present"
  %p
    = @project.desc
  .element_container
    =render 'elements',  elements: @elements, project_id: @project.id
  = link_to 'Edit', edit_project_path(@project)
  \|
  = link_to 'Back', projects_path
-if admin_signed_in?
  .blanket{id: 'element_dialog'}
    .new_dialog
      =render 'project_elements/form', :@project_element => @new_element
  .blanket{id: 'subelement_dialog'}
    .new_dialog
      =render 'project_subelements/form', :@project_subelement => @new_subelement