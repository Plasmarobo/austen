.container
  .row
    %h1 Listing projects
  .row
    %table
      %tr
        %th Name
        %th Started
        %th Finished
        %th Desc
        %th Image

      - @projects.each do |project|
        %tr
          %td
            = link_to project.name, project
            (
            = link_to 'Edit', edit_project_path(project) 
            ,
            = link_to 'Destroy', project, :method => :delete, :data => {configm: 'Are you sure?'}
            ) 
          %td= project.started
          %td= project.isFinished ? project.finished : "In Progress"
          %td= project.desc
          %td= image_tag project.image
      %br
      = link_to 'New Project', new_project_path
