= form_for @project_element do |f|
  - if @project_element.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project_element.errors.count, "error")} prohibited this element from being saved:"
      %ul
        - @project_element.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :status
    = f.select :status, options_for_select([["Complete", @project_element.COMPLETED], ["In Progress", @project_element.IN_PROGRESS], ["Future", @project_element.FUTURE, ["Default", 0]])
  .field
    = f.label :finished
    = f.datetime_select :finished
  .field
    = f.label :body
    = f.text_field :body
  .actions
    = f.submit 'Save'
