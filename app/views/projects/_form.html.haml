= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :started
    = f.datetime_select :started
  .field
    = f.label :finished
    = check_box_tag :project_is_finished
    .project_finished_hidden
      = f.datetime_select :finished
  .field
    = f.label :desc
    = f.text_field :desc
  .field
    = f.label :image
    = f.text_field :image
  .actions.project_submit
    = f.submit 'Save'
