=form_for(@blogpost) do |f|
  -if @blogpost.errors.any?
    .errors{id: "error_explanation"}
      %h2 
        =pluralize(@blogpost.errors.count, "error") 
      prohibited this blogpost from being saved:
      %ul
        -@blogpost.errors.full_messages.each do |msg|
          %li =msg
  .field
    =f.label :name
    %br
    =f.text_field :name, size: 45;
  .field
    =f.label :body
    %br
    =f.text_area :body, cols: 80, rows: 30, class: 'wysihtml5'
  .field
    =f.label :create
    %br
    =f.date_select :create
  .actions
    =f.submit
:javascript
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
