.container.center
  %h1 Listing blogposts

  %table
    %thead
      %tr
        %th Name
        %th Body
        %th Create
        %th
        %th
        %th
    %tbody
      -@blogposts.each do |blogpost|
        %tr
          %td =blogpost.name
          %td =blogpost.body
          %td =blogpost.create
          %td =link_to 'Show', blogpost
          %td =link_to 'Edit', edit_blogpost_path(blogpost)
          %td =link_to 'Destroy', blogpost, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  =link_to 'New Blogpost', new_blogpost_path
