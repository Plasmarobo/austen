!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Higgins Cassidy'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Higgins Cassidy'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .content
      .container
        %header
          = render 'layouts/navigation'
      .container
        %main{:role => "main"}
          .row
            .col-md-3
            .col-md-6
              = render 'layouts/messages'
            .col-md-3
          .row
            .col-md-1
            .col-md-10
              = yield
            .col-md-1
      .container
        %footer
          = render 'layouts/footer'
