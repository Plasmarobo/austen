=form_for @project_element do |f|
  - if @project_element.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project_element.errors.count, "error")} prohibited this element from being saved:"
      %ul
        - @project_element.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :status
    = f.select :status, options_for_select(Project::Status.select_options)

  .field
    = f.label :finished
    = check_box_tag :element_is_finished, true
    .element_finished_hidden
      = f.datetime_select :finished
  .field
    = f.label :body
    = f.text_field :body
  .actions.element_submit
    = f.submit 'Save'